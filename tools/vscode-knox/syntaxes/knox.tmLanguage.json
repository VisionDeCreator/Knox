{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Knox",
  "scopeName": "source.knox",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.knox",
          "match": "//.*$"
        },
        {
          "name": "comment.block.knox",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.knox",
          "match": "\\b(fn|let|mut|if|else|match|return|struct|import|pub|as)\\b"
        },
        {
          "name": "constant.language.knox",
          "match": "\\b(true|false|Ok|Err|Some|None)\\b"
        },
        {
          "name": "storage.type.knox",
          "match": "\\b(Option|Result|dynamic)\\b"
        },
        {
          "name": "keyword.operator.module.knox",
          "match": "::"
        },
        {
          "name": "storage.annotation.knox",
          "match": "@"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.knox",
          "match": "\\b(u64|int|string|bool)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.knox",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.knox",
              "match": "\\\\[nrt\"\\\\]"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.knox",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.knox",
          "match": "->|=>"
        },
        {
          "name": "punctuation.terminator.statement.knox",
          "match": ";"
        },
        {
          "name": "keyword.operator.other.knox",
          "match": "[?:.,|_<>!=]=?"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.knox",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.knox",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
